{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es2016", "dom"],
        "allowJs": true,
        "incremental": true, // 差分ビルド有効
        // "declaration": true,, "resources/types/index.d.ts"
        // "skipDefaultLibCheck": true,
        // "skipLibCheck": true
        // "checkJs": true
        "typeRoots": ["./resources/ts/types", "node_modules/@types"]
    },

    "include": ["resources/ts/**/*"]
}
